{
  "name": "KUNNA",
  "short_name": "KUNNA",
  "id": "com.kunna.app",
  "description": "Bienestar + seguridad + acompañamiento para mujeres",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#382a3c",
  "theme_color": "#f5e6ff",
  "orientation": "portrait",
  "scope": "/",
  "lang": "es",
  "dir": "ltr",
  "display_override": ["standalone"],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "screenshots": [
    {
      "src": "/images/logo_kunna.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "KUNNA App - Pantalla Principal"
    },
    {
      "src": "/images/logo_kunna.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "KUNNA App - Móvil"
    }
  ],
  "icons": [
    {
      "src": "/images/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icon-512.png", 
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "categories": ["lifestyle", "health", "security"],
  "shortcuts": [
    {
      "name": "Auxilio de Emergencia",
      "short_name": "Auxilio",
      "description": "Activar botón de pánico",
      "url": "/?action=auxilio",
      "icons": [{"src": "/images/icon-192.png", "sizes": "192x192"}]
    },
    {
      "name": "Acompañamiento",
      "short_name": "Acompañar",
      "description": "Activar seguimiento en tiempo real",
      "url": "/?action=acompanar",
      "icons": [{"src": "/images/icon-192.png", "sizes": "192x192"}]
    }
  ],
  "permissions": [
    "geolocation",
    "microphone",
    "camera",
    "notifications"
  ]
}